{
    "compilerOptions": {
        "module": "esnext",
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "ESNext",
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "noEmit": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "types": ["node"]
    },
    "include": ["./src/**/*", "./playwright.config.ts", "./test/e2e/**/*.ts", "./test/integration/**/*.ts"],
}
