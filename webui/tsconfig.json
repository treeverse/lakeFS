{
    "compilerOptions": {
        "module": "esnext",
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "ESNext",
        "isolatedModules": true,
        "moduleResolution": "bundle",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "noEmit": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true
    },
    "include": ["./src/**/*"]
}
