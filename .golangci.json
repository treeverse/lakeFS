{
  "version": "2",
  "run": {
    "tests": false
  },
  "formatters": {
    "enable": [
      "gofmt",
      "goimports"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "pkg/metastore/hive/gen-go",
        "third_party$",
        "builtin$",
        "examples$"
      ]
    }
  },
  "linters": {
    "default": "none",
    "enable": [
      "bodyclose",
      "copyloopvar",
      "dogsled",
      "err113",
      "errcheck",
      "gochecknoinits",
      "goconst",
      "gocritic",
      "gocyclo",
      "goprintffuncname",
      "gosec",
      "govet",
      "ineffassign",
      "misspell",
      "mnd",
      "nakedret",
      "staticcheck",
      "unconvert",
      "unparam",
      "unused",
      "whitespace"
    ],
    "exclusions": {
      "generated": "lax",
      "paths": [
        "pkg/metastore/hive/gen-go",
        "third_party$",
        "builtin$",
        "examples$"
      ],
      "presets": [
        "comments",
        "common-false-positives",
        "legacy",
        "std-error-handling"
      ]
    },
    "settings": {
      "mnd": {
        "ignored-files": [
          "pkg/actions/lua/.*"
        ]
      }
    }
  }
}
